#!/usr/bin/env bash

###############################################################################
# Delete local Git branches which has been removed on the remote repository.
###############################################################################
delete_git_branches() {
  for branch in $(git branch -vv | grep 'gone' | awk '{print $1}'); do
      git branch -D "$branch"
  done
}

###############################################################################
# Entrypoint of the script
###############################################################################
main() {
    delete_git_branches
}

# Defer the execution of the functions towards the end of the script
main "$@"
