#!/usr/bin/env python3

"""
Easily update the system through a simple script.

Author: Somraj Saha
License: GPL-3.0 (see https://github.com/Jarmos-san/dotfiles/blob/main/LICENSE for more
         information)
"""


import platform
import subprocess


def main() -> None:
    """Entrypoint of the script."""
    # Logic to update a Debian/Ubuntu system using APT
    if platform.system() == "Linux":
        if platform.freedesktop_os_release().get("NAME") == "Ubuntu":
            subprocess.run(["sudo", "apt-get", "update"])
            subprocess.run(["sudo", "apt-get", "upgrade", "--assume-yes"])
            subprocess.run(["sudo", "apt-get", "autoremove", "--purge"])

    # TODO: Write logic to check if Homebrew is installed then run an update


if __name__ == "__main__":
    main()
