# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.lua]
indent_size = 2

[*.{json,md,toml,yml}]
indent_size = 2

[*.{sh,aliases,functions,bash_profile,exports}]
indent_size = 2
insert_final_newline = false
